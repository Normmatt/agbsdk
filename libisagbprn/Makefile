include $(DEVKITARM)/base_tools
export CPP := $(PREFIX)cpp
export AR := $(PREFIX)ar
export AS := $(PREFIX)as

ifeq ($(OS),Windows_NT)
EXE := .exe
else
EXE :=
endif

CC1 := ../agbcc
CFLAGS := -O2 -mthumb-interwork -fhex-asm

CPPFLAGS := -I ../ginclude -I ../agbcc_src/libc/include -nostdinc -undef
ASFLAGS := -mcpu=arm7tdmi
ARFLAGS := rc

C_SRCS := libisagbprn.c nocashgba.c
C_OBJS := $(C_SRCS:%.c=%.o)

LIB := libisagbprn.a

.PHONY: all clean $(LIB)

all: $(LIB)

clean:
	rm -f $(LIB) $(C_SRCS:%.c=%.i) $(C_SRCS:%.c=%.s) $(C_OBJS)

$(LIB): $(C_OBJS)
	$(AR) $(ARFLAGS) $@ $^

$(C_OBJS): %.o: %.c
	@$(CPP) $(CPPFLAGS) $< -o $*.i
	@$(CC1) $(CFLAGS) -o $*.s $*.i
	@$(shell echo -e ".text\n\t.align\t2, 0\n" >> $*.s)
	$(AS) $(ASFLAGS) -o $@ $*.s
